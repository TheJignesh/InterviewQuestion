
@{
    ViewBag.Title = "TimeManagement";
}
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
<style>
    .col-lg-4 {
        position: relative;
        -ms-flex: 0 0 38.33333%;
        flex: 0 0 38.33333%;
        max-width: 38.33333%;
        padding-right: 6px;
        padding-left: 6px;
    }

    .col-lg-3 {
        position: relative;
        -ms-flex: 0 0 25.33333%;
        flex: 0 0 25.33333%;
        max-width: 25.33333%;
        padding-right: 6px;
        padding-left: 6px;
    }

    .col-lg-2 {
        position: relative;
        -ms-flex: 0 0 16.666667%;
        flex: 0 0 16.666667%;
        max-width: 16.666667%;
        padding-right: 6px;
        padding-left: 6px;
    }

    .col-lg-1 {
        position: relative;
        -ms-flex: 0 0 9.333333%;
        flex: 0 0 9.333333%;
        max-width: 9.333333%;
        padding-right: 6px;
        padding-left: 6px;
    }

    .justify-content-center {
        -ms-flex-pack: center !important;
        justify-content: center !important;
    }
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
<script src="~/Scripts/TimeManagement.js"></script>
<h2>TimeManagement</h2>
<label id="lblErrorTimeIn" style="color:red;"></label>
<div class="main_content">
    <div class="inner_all_page">
        <div class="prouct_page">
            <div class="container">
                <div class="ant-card-body" style="padding-top:10px;">
                    <div class="row ant-row-flex ant-row-flex-space-around" id="divTimeEntryForm">
                        <div class="row">
                            <div class="col-lg-2 form-group">
                                <label id="lblTimeIn" style="display: block;margin-bottom:5px;">Time In :</label>
                                <input type="text" id="txtTimeIn" width="10" class="form-control" />
                                @*<label id="lblErrorTimeIn" style="color:red;"></label>*@
                            </div>
                            <div class="col-lg-2 form-group">
                                <label id="lblTimeOut" style="display: block;margin-bottom:5px;">Time Out :</label>
                                <input type="text" id="txtTimeOut" width="10" class="form-control" />
                                @*<label id="lblErrorTimeOut" style="color:red;"></label>*@
                            </div>
                            <div class="col-lg-3 form-group">
                                <div class="ant-card-extra">
                                    <button type="button" class="ant-btn ios-click ant-btn-primary" id="btnAddNew" style="margin-top: 30px;">Add New</button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-2 offset-md-2">
                            <div class="ant-card-extra">
                                <button type="button" class="ant-btn ios-click ant-btn-primary" id="btnsubmit">Save</button>
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="row ant-row-flex ant-row-flex-space-around">
                        <div class="col-lg-12 form-group">
                            <table id="table">
                                <thead>
                                    <tr>
                                        <th>In</th>

                                        <th>Out</th>

                                        <th>Duration</th>

                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                            <table id="table2">
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>